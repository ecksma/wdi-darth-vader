<!DOCTYPE html>
<html>
<head>
  <title>FlashCards</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <h1>WDI Darth Vader Flash Cards</h1>



  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to "Home", '/' %></li>
        <li><%= link_to "Play", '/flash_cards/play' %></li>
        <% if current_user %>
        <li>Signed in as <%= current_user.name %></li>
        <li><%= link_to "Logout", '/users/logout' %></li>
        <% else %>
        <li><%= link_to 'Login', '/users/login' %></li>
        <li><%= link_to 'Signup', '/users/signup' %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>





  <!-- <nav>
    <ul>
      <li><%= link_to "Home", '/' %></li>
      <li><%= link_to "Play", '/flash_cards/play' %></li>
      <li><% if current_user %>
          Signed in as <%= current_user.name %> | <%= link_to "Logout", '/users/logout' %>
          <% else %>
          <%= link_to 'Login', '/users/login' %> | <%= link_to 'Signup', '/users/signup' %>
          <% end %></li>
    </ul>
  </nav> -->
</header>

<%= yield %>

</body>
</html>
