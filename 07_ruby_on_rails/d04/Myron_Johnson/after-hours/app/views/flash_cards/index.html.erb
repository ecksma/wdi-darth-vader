<h1>Flash Cards Index</h1>


<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
    </tr>
  </thead>

  <tbody>
  <% @flashcards.each do |flashcard| %>
  <tr>
    <td> <%= flashcard.question %> </td>
    <td> <%= flashcard.answer %> </td>
    <td> <%= form_for flashcard, url: {action: 'delete'} do |f| %>
          <%= f.hidden_field :id %>
          <%= f.submit 'Delete Question' %> </td>
        <% end %>
    <td></td>
  </tr>
  <% end %>
  </tbody>
</table>

<a href="/flash_cards/new"><button type="button">ADD NEW</button></a>
