<h2>Contact</h2>
<h4>Do I know you?</h4>
<p> </p>

<script>
	$(document).ready(function() {
		var p = $('p'); 
		$.ajax({
			type: 'get',
			dataType: 'json',
			url: '/api/json',
			success: function(data) {
				$(p).html('You can find me on the information super highway as ' + data.contact_name + ' and if that doesn\'t work you can email me at: ' + data.contact_email + '. ' + data.thanks);
			},
			error: function(err) {
				console.log(err);
				$(p).html('ERRAWWWWRRRR'); 
			}
		});
	}); 
</script> 